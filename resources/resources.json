{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "env": {
        "type": "string"
      },
      "mongoConnectionString": {
        "type": "string"
      },
      "cdnEnabled": {
        "type": "bool",
        "defaultValue": false
      },
      "toEmail": {
        "type": "string"
      },
      "webAppSkuName": {
        "type": "string",
        "defaultValue": "F1"
      }
    },
    "variables": {
      "webAppName": "[concat('ryomtand-', parameters('env'))]",
      "appServiceName": "[concat('ryomtand-', parameters('env'))]",
      "verizonCdnProfileName": "[concat('ryomtand-', parameters('env'))]",
      "cdnEndpointName": "[concat('ryomtand', parameters('env'), 'cdn')]",
      "cdnOrigin": "[concat(variables('webAppName'), '.azurewebsites.net')]"
    },
    "resources": [
      {
        "apiVersion": "2016-03-01",
        "name": "[variables('appServiceName')]",
        "type": "Microsoft.Web/serverfarms",
        "location": "[resourceGroup().location]",
        "sku": {
          "name": "[parameters('webAppSkuName')]",
          "capacity": 1
        },
        "tags": {
          "displayName": "[variables('appServiceName')]"
        },
        "properties": {
          "name": "[variables('appServiceName')]"
        }
      },
      {
        "apiVersion": "2016-08-01",
        "name": "[variables('webAppName')]",
        "type": "Microsoft.Web/sites",
        "kind": "app,linux,container",
        "location": "[resourceGroup().location]",
        "tags": {
          "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', variables('webAppName'))]": "Resource",
          "displayName": "[variables('webAppName')]"
        },
        "dependsOn": [
          "[concat('Microsoft.Web/serverfarms/', variables('appServiceName'))]"
        ],
        "properties": {
          "name": "[variables('webAppName')]",
          "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', concat(variables('appServiceName')))]",
          "siteConfig": {
            "appSettings": [
              {
                "name": "MONGO_CONNECTION_STRING",
                "value": "[parameters('mongoConnectionString')]"
              },
              {
                "name": "WEBSITE_NODE_DEFAULT_VERSION",
                "value": "8.10.0"
              },
              {
                "name": "TO_EMAIL",
                "value": "[parameters('toEmail')]"
              }
            ]
          }
        }
      },
      {
        "condition": "[parameters('cdnEnabled')]",
        "type": "Microsoft.Cdn/profiles",
        "name": "[variables('verizonCdnProfileName')]",
        "apiVersion": "2017-10-12",
        "location": "[resourceGroup().location]",
        "tags": {},
        "sku": {
          "name": "Standard_Verizon"
        },
        "properties": {},
        "resources": [
          {
            "condition": "[parameters('cdnEnabled')]",
            "name": "[variables('cdnEndpointName')]",
            "type": "endpoints",
            "apiVersion": "2017-10-12",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {
              "originHostHeader": "[variables('cdnOrigin')]",
              "contentTypesToCompress": [
                "text/plain",
                "text/html",
                "text/css",
                "text/javascript",
                "application/x-javascript",
                "application/javascript",
                "application/json",
                "application/xml",
                "image/png",
                "image/jpeg"
              ],
              "isCompressionEnabled": true,
              "isHttpAllowed": true,
              "isHttpsAllowed": true,
              "queryStringCachingBehavior": "UseQueryString",
              "origins": [
                {
                  "name": "news-cdn-origin",
                  "properties": {
                    "hostName": "[variables('cdnOrigin')]",
                    "httpPort": 80,
                    "httpsPort": 443
                  }
                }
              ],
              "deliveryPolicy": {
                "rules": [
                  {
                    "order": 0,
                    "conditions": [],
                    "actions": [
                      {
                        "name": "CacheExpiration",
                        "parameters": {
                          "@odata.type": "#Microsoft.Azure.Cdn.Models.DeliveryRuleCacheExpirationActionParameters",
                          "cacheBehavior": "Override",
                          "cacheDuration": "01:00:00",
                          "cacheType": "All"
                        }
                      }
                    ]
                  },
                  {
                    "order": 1,
                    "conditions": [
                      {
                        "name": "UrlPath",
                        "parameters": {
                          "@odata.type": "#Microsoft.Azure.Cdn.Models.DeliveryRuleUrlPathConditionParameters",
                          "matchType": "Wildcard",
                          "path": "/cms/files/*"
                        }
                      }
                    ],
                    "actions": [
                      {
                        "name": "CacheExpiration",
                        "parameters": {
                          "@odata.type": "#Microsoft.Azure.Cdn.Models.DeliveryRuleCacheExpirationActionParameters",
                          "cacheBehavior": "Override",
                          "cacheDuration": "31.00:00:00",
                          "cacheType": "All"
                        }
                      }
                    ]
                  }
                ]
              }
            },
            "dependsOn": [
              "[resourceId('Microsoft.Cdn/profiles', variables('verizonCdnProfileName'))]"
            ]
          }
        ]
      }
    ],
    "outputs": {}
}