{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "member-access": [
      true,
      "no-public"
    ],
    "no-empty-interface": false,
    "no-console": false,
    "object-literal-shorthand": false,
    "jsx-boolean-value": false,
    "jsx-no-lambda": false,
    "no-var-requires": false,
    "jsx-no-bind": false,
    "no-shadowed-variable": false,
    "no-debugger": false,
    "curly": true,
    "no-string-literal": false,
    "no-empty": false,
    "radix": false,
    "array-type": false,
    "no-string-throw": false,
    "file-name-casing": [
      true,
      {
        "index.tsx": "kebab-case",
        ".tsx": "pascal-case",
        ".ts": "kebab-case"
      }
    ],
    "import-name": true,
    "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case"],
    "prefer-object-spread": true,
    "no-return-await": true,
    "prefer-for-of": true,
    "no-var-keyword": true,
    "triple-equals": true,
    "ignore-same-line": true
  },
  "jsRules": {
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "no-empty-interface": false,
    "no-console": false,
    "object-literal-shorthand": false,
    "jsx-boolean-value": false,
    "jsx-no-lambda": false,
    "no-var-requires": false,
    "jsx-no-bind": false,
    "no-shadowed-variable": false,
    "no-debugger": false,
    "curly": false,
    "no-string-literal": false,
    "no-empty": false,
    "radix": false,
    "array-type": false,
    "no-string-throw": false
  }
}